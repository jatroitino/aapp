<?xml version='1.0' encoding='utf-8'?>
<widget id="com.golfinup.app" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>GolfinUp</name>
    <description>
        GolfinUp
    </description>
    <author email="info@proyectosweb.info" href="http://proyectosweb.info">
        GolfinUp
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/icon.png" />
        <icon density="mdpi" src="www/res/icon/android/icon.png" />
        <icon density="hdpi" src="www/res/icon/android/icon.png" />
        <icon density="xhdpi" src="www/res/icon/android/icon.png" />
        <icon density="xxhdpi" src="www/res/icon/android/icon.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/icon.png" />
        <splash density="land-ldpi" src="www/res/screen/android/screen.jpg" />
        <splash density="land-mdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="land-hdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="land-xhdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="land-xxhdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="port-ldpi" src="www/res/screen/android/screen.jpg" />
        <splash density="port-mdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="port-hdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="port-xhdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="port-xxhdpi" src="www/res/screen/android/screen.jpg" />
        <splash density="port-xxxhdpi" src="www/res/screen/android/screen.jpg" />
    </platform>
    <platform name="ios">
        <icon height="40" platform="ios" src="www/res/icon/ios/notificationsipad.png" width="40" />
        <icon height="58" platform="ios" src="www/res/icon/ios/settingsipad.png" width="58" />
        <icon height="60" platform="ios" src="www/res/icon/ios/notificationsiphone1.png" width="60" />
        <icon height="80" platform="ios" src="www/res/icon/ios/spotlightipad.png" width="80" />
        <icon height="87" platform="ios" src="www/res/icon/ios/settingsiphone1.png" width="87" />
        <icon height="120" platform="ios" src="www/res/icon/ios/iconiphone2.png" width="120" />
        <icon height="152" platform="ios" src="www/res/icon/ios/iconipad.png" width="152" />
        <icon height="167" platform="ios" src="www/res/icon/ios/iconipadpro.png" width="167" />
        <icon height="180" platform="ios" src="www/res/icon/ios/iconiphone1.png" width="180" />
        <icon height="1024" platform="ios" src="www/res/icon/ios/iconappstore.png" width="1024" />
        <splash height="1136" platform="ios" src="www/res/screen/ios/p640.png" width="640" />
        <splash height="1334" platform="ios" src="www/res/screen/ios/p750.png" width="750" />
        <splash height="2436" platform="ios" src="www/res/screen/ios/p1125.png" width="1125" />
        <splash height="2208" platform="ios" src="www/res/screen/ios/p1242.png" width="1242" />
        <splash height="2048" platform="ios" src="www/res/screen/ios/p1536.png" width="1536" />
        <splash height="2224" platform="ios" src="www/res/screen/ios/p1668.png" width="1668" />
        <splash height="2732" platform="ios" src="www/res/screen/ios/p2048.png" width="2048" />
    </platform>
   
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
